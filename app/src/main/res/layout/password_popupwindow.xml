<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_corner"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_view_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1079FF"
            android:singleLine="true"
            android:hint="原密码"
            android:textColorHint="#1079FF"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_corner"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_view_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#1079FF"
            android:singleLine="true"
            android:hint="新密码"
            android:textColorHint="#1079FF"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_corner"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_view_config_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#1079FF"
            android:singleLine="true"
            android:hint="确认密码"
            android:textColorHint="#1079FF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corner">

        <Button
            android:id="@+id/button_config_new_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24dp"
            android:text="确认"
            android:textColor="#70AA39"/>

    </LinearLayout>



</LinearLayout>