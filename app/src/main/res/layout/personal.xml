<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1079FF"
        android:orientation="horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button"/>


        <TextView
            android:id="@+id/text_view_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人信息"
            android:textColor="#ffffff"
            android:textSize="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.lovejoy.views.view.RoundImageView
            android:id="@+id/image_view_user_head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/text_view_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:textColor="#1079FF"
            android:text="吼吼吼你说啥"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#C9C9CB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_email_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#1079FF"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text="邮箱："/>

        <TextView
            android:id="@+id/text_view_user_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="14301017@bjtu.edu.cn"
            android:singleLine="true"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#C9C9CB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_telephone_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#1079FF"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text="手机："/>

        <TextView
            android:id="@+id/text_view_user_telephone"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="18401605753"
            android:focusable="false"
            android:singleLine="true"/>

        <Button
            android:id="@+id/button_user_telephone_change"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_back"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="更改"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#C9C9CB" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_password_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#1079FF"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text="密码："/>

        <TextView
            android:id="@+id/text_view_user_password"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="**************"
            android:singleLine="true"
            android:focusable="false"/>

        <Button
            android:id="@+id/button_user_password_change"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_back"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="更改"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#C9C9CB" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_school_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#1079FF"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text="学校："/>

        <TextView
            android:id="@+id/text_view_user_school"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="北京交通大学"
            android:singleLine="true"
            android:focusable="false"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#C9C9CB" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_student_num_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#1079FF"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:text="学号："/>

        <TextView
            android:id="@+id/text_view_user_student_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="14301017"
            android:singleLine="true"
            android:focusable="false"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#C9C9CB" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出账户"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:textColor="#FF4081"/>

    </LinearLayout>

</LinearLayout>