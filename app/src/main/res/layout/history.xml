<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1079FF"
        android:orientation="horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button"/>


        <TextView
            android:id="@+id/text_view_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="历史记录"
            android:textColor="#ffffff"
            android:textSize="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragment_list_view_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.lovejoy.core.HistoryDynamicTopJoinedFragment"
            tools:layout="@layout/list_view_history_activity" />

    </LinearLayout>

</LinearLayout>