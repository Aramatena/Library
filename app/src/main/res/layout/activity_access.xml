<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_access"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lovejoy.activity.AccessActivity">
    <RelativeLayout
        android:id="@+id/LaunchTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/zone_title_bg">
        <Button

            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/button2"
            android:background="@drawable/return_icon"/>

        <TextView
            android:text="活动评估"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:background="@color/zone_title_bg"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_below="@id/LaunchTop"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
       >

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/lbs_popup_bg"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/NameEdit"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:inputType="text"
                android:hint="活动名称"
                android:gravity="center"
                android:background="@drawable/launch_et_bg"
                android:layout_margin="2dp"/>
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devide_line"/>
            <TextView
                android:id="@+id/DescEdit"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:inputType="textPassword"
                android:hint="发布者"
                android:gravity="center"
                android:background="@drawable/launch_et_bg"
                android:layout_margin="2dp"/>
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devide_line"/>
            <TextView
                android:id="@+id/NumEdit"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:inputType="text"
                android:hint="参与者"
                android:gravity="center"
                android:background="@drawable/launch_et_bg"
                android:layout_margin="2dp"/>
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devide_line"/>
            <EditText
                android:id="@+id/DeadlineEdit"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:inputType="text"
                android:hint="评价内容"
                android:gravity="center"
                android:background="@drawable/launch_et_bg"
                android:layout_margin="2dp"/>
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devide_line"/>
            <Button
                android:text="提交评价"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Join"
                android:background="@color/green"
                />
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devide_line"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
